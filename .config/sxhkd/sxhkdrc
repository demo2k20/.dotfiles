# wm independent hotkeys

# terminal
super + Return
	$TERMINAL

# floating terminal
super + shift + Return
	$TERMINAL -t floatterm

# program launcher
super + d
	dmenu_run -i -p "Run: "

# color switcher
super + shift + o
	colorswitcher

# phonemes
super + F1
	phonemes

# nightlight
super + shift + u
	nightlight

# clipboard manager
super + shift + c
	clipmenu -i

# pulseaudio controls
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%; polybar-msg hook volume 1 #increase volume
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%; polybar-msg hook volume 1 #decrease volume
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle; polybar-msg hook volume 1 # mute

# screen brightness controls
XF86MonBrightnessUp
	sudo xbacklight -inc 5; polybar-msg hook brightness 1
XF86MonBrightnessDown
	sudo xbacklight -dec 5; polybar-msg hook brightness 1

# media controls
XF86AudioPlay
	playerctl play-pause
XF86AudioPause
	playerctl pause
XF86XK_AudioNext
	playerctl next
XF86XK_AudioPrev
	playerctl previous

# print screen
Print
	maim /tmp/screenshot.png; xclip -selection clipboard -t image/png < /tmp/screenshot.png

# snip screen
shift + Print
	maim -s /tmp/snippet.png; xclip -selection clipboard -t image/png < /tmp/snippet.png

# snip active window
control + Print
	maim -i $(xdotool getactivewindow) > /tmp/windowsnippet.png | xclip -selection clipboard -t image/png

# networkmanager
super + shift + n
	networkmanager_dmenu

# bluetooth manager
super + shift + b
	$TERMINAL -e bluetoothctl

# pulseaudio mixer
super + shift + p
	$TERMINAL -e pulsemixer

# htop
super + shift + Escape
	$TERMINAL -e htop

# browser
super + w
	$BROWSER

# alt browser
super + shift + w
	$ALTBROWSER

# file manager
super + r
	$TERMINAL -e $FILE

# pdf viewer
super + y
	zathura

# calculator
super + c
	$TERMINAL -t calc -e bc -q

# display settings
super + p
	arandr

# power menu
super + F12
	powermenu

# toggle touchpad
super + Insert
	toggletouchpad

# toggle polybar
super + shift + i
	polybar-msg cmd toggle

# lockscreen
super + x
	lockscreen

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
