## --- Important Tools --- ##
# Terminal
super + Return
    $TERMINAL

# Floating terminal
super + shift + Return
    $TERMINAL -t floatterm

# Program launcher
super + d
    dmenu_run -i -p "Run:"


## --- Multimedia keys --- ##
# Brightness controls
XF86MonBrightnessUp
    sudo xbacklight -inc 5; pkill -SIGRTMIN+1 i3blocks
XF86MonBrightnessDown
    sudo xbacklight -dec 5; pkill -SIGRTMIN+1 i3blocks

# Audio controls
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%; pkill -SIGRTMIN+2 i3blocks
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%; pkill -SIGRTMIN+2 i3blocks
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle; pkill -SIGRTMIN+2 i3blocks

# Media controls
XF86AudioPlay
    playerctl play-pause
XF86XK_AudioNext
    playerctl next
XF86XK_AudioPrev
    playerctl previous

# Media controls (mpd)
super + F7
    playerctl --player=mpd play-pause
super + F8
    playerctl --player=mpd next
super + F6
    playerctl --player=mpd previous

# Touchpad Toggle
XF86TouchpadToggle
    toggletouchpad

# Lockscreen
XF86ScreenSaver
    lockscreen


## --- Print screen functionality --- ##
# Print screen(s)
Print
    maim /tmp/printscreen.png; xclip -selection clipboard -t image/png < /tmp/printscreen.png

# Snip screen
shift + Print
    maim -s /tmp/snippet.png; xclip -selection clipboard -t image/png < /tmp/snippet.png

# Snip active window
alt + Print
    maim -i $(xdotool getactivewindow) > /tmp/windowsnippet.png | xclip -selection clipboard -t image/png


## --- Basic programs --- ##
# Browser
super + w
    $BROWSER

# Display manager
super + p
    arandr

# Bluetooth manager
super + shift + b
    $TERMINAL -e bluetoothctl

# Network manager
super + shift + n
    networkmanager_dmenu

# Task manager
super + shift + Escape
    $TERMINAL -e htop

# File manager
super + r
    $TERMINAL -e $FILE

# Audio mixer
super + shift + p
    $TERMINAL -e pulsemixer

# Music player
super + m
    $TERMINAL -e ncmpcpp

# Email client
super + n
    $TERMINAL -e neomutt

# Calculator
super + c
    $TERMINAL -t floatterm -e bc -l -q


## --- Personal Scripts --- ##
# Colorscheme switcher menu
super + shift + o
    colorswitcher

# Phoneme selector menu
super + shift + z
    phonemesel

# Bookmark menu
super + b
    bookmenu

# Night light menu
super + shift + u
    nightlight

# Scale resolution menu
super + shift + t
    scaleres

# Power menu
super + shift + F12
    powermenu


## --- Quality of life --- ##
# Toggle bar
super + shift + i
    i3-msg bar mode toggle

# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
