## --- Important Tools --- ##
# Terminal
super + Return
    $TERMINAL

# Floating terminal
super + shift + Return
    $TERMINAL -t floatterm

# Program launcher
super + d
    dmenu_run -i -p "Run:"


## --- Multimedia keys --- ##
# Brightness controls
XF86MonBrightnessUp
    brightness up
XF86MonBrightnessDown
    brightness down

# Audio controls
XF86AudioRaiseVolume
    volume up
XF86AudioLowerVolume
    volume down
XF86AudioMute
    volume toggle

# Audio controls (mpc)
super + F12
    mpc volume +5
super + F11
    mpc volume -5
super + F10
    mpc toggle

# Media controls
XF86AudioPlay
    playerctl play-pause
XF86XK_AudioNext
    playerctl next
XF86XK_AudioPrev
    playerctl previous

# Media controls (mpc)
super + F7
    mpc toggle
super + F8
    mpc next
super + F6
    mpc prev

# Touchpad Toggle
XF86TouchpadToggle
    toggletouchpad

# Lockscreen
XF86ScreenSaver
    lockscreen


## --- Print screen functionality --- ##
# Print screen(s)
Print
    maim /tmp/printscreen.png; xclip -selection clipboard -t image/png < /tmp/printscreen.png

# Snip screen
shift + Print
    maim -s /tmp/snippet.png; xclip -selection clipboard -t image/png < /tmp/snippet.png

# Snip active window
alt + Print
    maim -i $(xdotool getactivewindow) > /tmp/windowsnippet.png | xclip -selection clipboard -t image/png


## --- Basic programs --- ##
# Browser
super + w
    $BROWSER

# Display manager
super + p
    arandr

# Bluetooth manager
super + shift + b
    $TERMINAL -e bluetoothctl

# Network manager
super + shift + n
    networkmanager_dmenu

# Task manager
super + shift + Escape
    $TERMINAL -e htop

# File manager
super + r
    $TERMINAL -e $FILE

# Audio mixer
super + shift + p
    $TERMINAL -e pulsemixer

# Music player
super + m
    $TERMINAL -t ncmpcpp -e ncmpcpp

# Email client
super + n
    $TERMINAL -t neomutt -e neomutt

# Calculator
super + c
    $TERMINAL -t floatterm -e bc -l -q


## --- Personal Scripts --- ##
# Colorscheme switcher menu
super + shift + o
    colorswitcher

# Phoneme selector menu
super + shift + y
    phonemesel

# Bookmark menu
super + b
    bookmenu

# Night light menu
super + shift + u
    nightlight

# Scale resolution menu
super + shift + t
    scaleres

# Power menu
super + shift + F12
    powermenu


## --- Quality of life --- ##
# Toggle bar
super + shift + i
    i3-msg bar mode toggle

# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd
