#
# wm independent hotkeys
#

# launch a terminal
super + Return
	$TERMINAL

# program launcher
super + d
	rofi -show run -show-icons -lines 8

# pulse Audio controls
XF86AudioRaiseVolume 
	pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute 
	pactl set-sink-mute 0 toggle # mute sound

# screen brightness controls
XF86MonBrightnessUp
	sudo xbacklight -inc 10; brightness=$(xbacklight -get); notify-send --hint=string:x-dunst-stack-tag:brightness " $brightness%"
XF86MonBrightnessDown
	sudo xbacklight -dec 10; brightness=$(xbacklight -get); notify-send --hint=string:x-dunst-stack-tag:brightness " $brightness%"

# print screen
Print
	maim -o /tmp/screenshot.png; xclip -selection clipboard -t image/png < /tmp/screenshot.png

# snip screen
shift + Print
	maim -s -o /tmp/snippet.png; xclip -selection clipboard -t image/png < /tmp/snippet.png

# volume mixer
super + shift + p
	$TERMINAL -e pulsemixer

# task manager
super + shift + Escape
	$TERMINAL -e htop

# browser
super + w
	$BROWSER

# file manager
super + r
	bspc desktop -f ^3; $TERMINAL -e $FILE

# display settings
super + p
	arandr

# show power menu
super + F12
	~/.scripts/powermenu

# restart compton
super + shift + i
	killall compton; sleep 1; compton --config ~/.config/compton/compton.conf

# restart polybar
super + shift + u
	killall polybar; sleep 2; ~/.scripts/polybarstart

# disable gaps, padding and polybar
super + o
	polybar-msg cmd hide; bspc config top_padding 0; bspc config bottom_padding 0; bspc config window_gap 0; bspc config border_width 0

# toggle touchpad
super + End
	~/.scripts/toggletouchpad

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#


# restart bspwm
super + shift + r
	bspc wm -r

# close window
super + shift + q
	bspc node -c

# send the newest marked node to the newest preselected node
 super + y
	bspc node newest.marked.local -n newest.!automatic.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the last monitor
super + Tab
	bspc monitor -f next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# resize windows
super + alt + {h,j,k,l}
	$SHELL ~/.config/sxhkd/resize {x -, y +, y -, x +}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
