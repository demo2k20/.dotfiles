#!/bin/sh

CHOICE=$(printf 'Lock\nLogout\nShutdown\nReboot\nSuspend\nHibernate' | dmenu -i -p "Powermenu")

case "$CHOICE" in
    Lock)
        loginctl lock-session ;;
    Logout)
        i3-msg exit || kill -TERM "$(pidof dwm)" || bspc quit ;;
    Shutdown)
        systemctl poweroff ;;
    Reboot)
        systemctl reboot ;;
    Suspend)
        systemctl suspend ;;
    Hibernate)
        systemctl hibernate ;;
    *)
        exit
esac
