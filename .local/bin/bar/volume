#!/bin/sh

case $BLOCK_BUTTON in
    1) $TERMINAL -e pulsemixer ;;
    3) pamixer -t ;;
    4) pamixer -i 5 ;;
    5) pamixer -d 5 ;;
esac

case $1 in
    toggle) pamixer -t; pkill -SIGRTMIN+2 dwmblocks ;;
    mute) pamixer -m; pkill -SIGRTMIN+2 dwmblocks ;;
    unmute) pamixer -u; pkill -SIGRTMIN+2 dwmblocks ;;
    up) pamixer -i 5; pkill -SIGRTMIN+2 dwmblocks ;;
    down) pamixer -d 5; pkill -SIGRTMIN+2 dwmblocks ;;
esac

MUTED=$(pamixer --get-mute)
VOLUME=$(pamixer --get-volume)

if [ "$MUTED" = "true" ]; then
    printf "\n"
else
    printf " $VOLUME%%\n"
fi
