#!/bin/sh

case $BLOCK_BUTTON in
    1) $TERMINAL -e pulsemixer ;;
    3) pamixer -t ;;
    4) pamixer -i 5 ;;
    5) pamixer -d 5 ;;
esac

case $1 in
    toggle) pamixer -t ;;
    mute) pamixer -m ;;
    unmute) pamixer -u ;;
    up) pamixer -i 5 ;;
    down) pamixer -d 5 ;;
esac

if [ $(pamixer --get-mute) = "true" ]; then
    printf "\n"
    pkill -SIGRTMIN+2 i3blocks
    exit
else
    printf " $(pamixer --get-volume)%%\n"
    pkill -SIGRTMIN+2 i3blocks
fi
