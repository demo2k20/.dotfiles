#!/bin/sh

case $BLOCK_BUTTON in
    1) xbacklight -set 75 ;;
    3) xbacklight -set 25 ;;
    4) xbacklight -inc 5 ;;
    5) xbacklight -dec 5 ;;
esac

case $1 in
    up) xbacklight -inc 5 ;;
    down) xbacklight -dec 5 ;;
esac

BRIGHTNESS=$(xbacklight -get)

printf "ïƒ« $BRIGHTNESS%%\n"

pkill -SIGRTMIN+1 i3blocks
