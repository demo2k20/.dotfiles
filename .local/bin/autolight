#!/bin/sh

TIME=$(date +%H)

NIGHTLIGHT_ON() { \
    redshift -PO 3200 > /dev/null
    notify-send "Autolight" "Nightlight: ON"
	}

NIGHTLIGHT_OFF() { \
    redshift -PO 6500 > /dev/null
    notify-send "Autolight" "Nightlight: OFF"
	}

[ "$TIME" -ge "21" -o "$TIME" -le "7" ] && NIGHTLIGHT_ON || NIGHTLIGHT_OFF
