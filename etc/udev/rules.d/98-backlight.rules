# Adjust screen brightness according to power state
# 1st rule for when on AC
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="1", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/roland/.config/X11/Xauthority", RUN+="/bin/sh -c 'xbacklight -set 75; polybar-msg hook brightness 1 > /dev/null'"

# 2nd rule for when on battery
ACTION=="change", SUBSYSTEM=="power_supply", ATTR{type}=="Mains", ATTR{online}=="0", ENV{DISPLAY}=":0", ENV{XAUTHORITY}="/home/roland/.config/X11/Xauthority", RUN+="/bin/sh -c 'xbacklight -set 25; polybar-msg hook brightness 1 > /dev/null'"
